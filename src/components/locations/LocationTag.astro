---
import type { LocationType } from "../../util/types/schemas";
export interface Props {
    tagColor: string;
    class?: string;
    borderColor?: string;
    type?: LocationType;
}
const { tagColor, class: addclasses = "", borderColor, type } = Astro.props;
---

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    .material-symbols-outlined {
        font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 48;
        display: flex !important;
        align-items: center;
        justify-content: center;
    }
</style>

<div class:list={["w-fit divide-solid flex h-8 overflow-hidden divide-x", [addclasses]]}>
    <div class="bg-sky-400 flex justify-center w-8 h-8 join-item">
        <span class="material-symbols-outlined" style="color: white;">ac_unit</span>
    </div>
    <div class:list={["w-2 border-y-none border-black join-item"]} style=`background-color: ${tagColor};`></div>
    <div class="border-y-none flex items-center w-auto px-2 text-black bg-red-500 join-item" style=`background-color: ${tagColor};`>
        <p class="m-0">
            <slot />
        </p>
    </div>
</div>

